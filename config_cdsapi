#!/bin/bash

# Check if the script received the required arguments
if [ "$#" -lt 2 ]; then
    echo "Usage: $0 <line1> <line2>"
    exit 1
fi

# Install the cdsapi package
pip install cdsapi

# Create the .cdsapirc file in the home directory
cdsapirc_path="$HOME/.cdsapirc"

# Write the provided lines into the .cdsapirc file
echo "$1" > "$cdsapirc_path"
echo "$2" >> "$cdsapirc_path"
